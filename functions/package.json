{
  "name": "fireadmin-functions",
  "description": "Cloud Functions for Fireadmin application.",
  "scripts": {
    "test": "NODE_ENV=test mocha ./test/unit/**/*.spec.ts",
    "test:watch": "yarn test --watch",
    "test:cov": "nyc --reporter=lcov --reporter=html yarn test",
    "test:cov:watch": "npm run test:cov -- --watch",
    "lint": "eslint -c .eslintrc.js src test",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist etc",
    "build": "npm run clean && tsc",
    "watch": "npm run build -- --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "algoliasearch": "^3.24.6",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.6.1",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.6",
    "googleapis": "^23.0.0",
    "lodash": "^4.17.15",
    "mkdirp": "^1.0.4",
    "request": "^2.83.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.13",
    "@types/sinon": "^9.0.4",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "faux-jax": "^5.0.6",
    "firebase-functions-test": "^0.2.1",
    "mocha": "^7.2.0",
    "nyc": "^15.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "engines": {
    "node": "10"
  },
  "author": "prescottprue (https://github.com/prescottprue)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/fireadmin.git"
  }
}
